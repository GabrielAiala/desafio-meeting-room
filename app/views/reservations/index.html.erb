<div class="mx-auto max-w-4xl pt-10 h-full">
  <%= month_calendar(events: @reservations) do |date, reservations| %>
    <div class="flex flex-col h-full day-cell">
      <p class="">
        <%= date.day %>
      </p>
      <% reservations.each do |reservation| %>
        <div class="bg-blue-200 rounded-xl p-1 my-1">
          <p class="text-sm">
            <%= reservation.room.name %>
          </p>
          <p class="text-xs text-stone-500">
            <%= reservation.start_time.strftime("%H:%M") %> - 
            <%= reservation.end_time.strftime("%H:%M") %>
          </p>
        </div>
      <% end %>
      </div>
  <% end %>
</div>