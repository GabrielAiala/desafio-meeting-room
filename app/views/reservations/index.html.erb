<div class="mx-auto max-w-4xl pt-10 h-full">
<div class="flex flex-row gap-6 mb-3">
    <%= link_to "Reservar sala", new_reservation_path, class: "flex justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    <%= link_to "Criar sala", new_room_path, class: "flex justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
  <%= month_calendar(events: @reservations) do |date, reservations| %>
    <div class="flex flex-col h-full day-cell">
      <p class="">
        <%= date.day %>
      </p>
      <% reservations.each do |reservation| %>
        <div class="bg-blue-200 rounded-xl p-1 my-1">
          <p class="text-sm">
            <%= reservation.room.name %>
          </p>
          <p class="text-xs text-stone-500">
            <%= reservation.start_time.strftime("%H:%M") %> - 
            <%= reservation.end_time.strftime("%H:%M") %>
          </p>
        </div>
      <% end %>
      </div>
  <% end %>
</div>